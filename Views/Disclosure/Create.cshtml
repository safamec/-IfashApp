@model IfsahApp.Models.Disclosure

@{
    Layout = null; // Use your actual layout if you want, otherwise this runs standalone
    ViewData["Title"] = "الإبلاغ عن مخالفة";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - IfsahApp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container mt-5" style="max-width: 600px;">
        <h3 class="text-start">@ViewData["Title"]</h3>

        <form asp-action="Create" method="post" enctype="multipart/form-data" novalidate>
            <div class="mb-3">
                <label asp-for="DisclosureTypeId" class="form-label">نوع البلاغ</label>
               <select asp-for="DisclosureTypeId" class="form-select" 
        asp-items='@(new SelectList(ViewBag.DisclosureTypes, "Id", "Name"))'>
    <option value="">-- اختر نوع البلاغ --</option>
</select>

                <span asp-validation-for="DisclosureTypeId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">وصف المخالفة </label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="اكتب وصف البلاغ هنا..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="IncidentStartDate" class="form-label">تاريخ البلاغ</label>
                    <input asp-for="IncidentStartDate" class="form-control" type="date" />
                    <span asp-validation-for="IncidentStartDate" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Location" class="form-label">مكان المخالفة </label>
                    <input asp-for="Location" class="form-control" placeholder="مكان وقوع المخالفة" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
  <!-- Suspected People -->
  <div class="col-md-6">
    <label class="form-label fw-bold">الأشخاص المشتبه بهم</label>
    <div id="suspected-people-list">
      <div class="input-group mb-2">
        <input type="text" name="SuspectedPeopleNames" class="form-control" placeholder="أضف اسم الشخص" />
        <button type="button" class="btn btn-outline-primary btn-sm" onclick="addInput('suspected-people-list')">+</button>

      </div>
    </div>
  </div>

  <!-- Related People -->
  <div class="col-md-6">
    <label class="form-label fw-bold">الأشخاص الذين لديهم معلومات ذات صلة</label>
    <div id="related-people-list">
      <div class="input-group mb-2">
        <input type="text" name="RelatedPeopleNames" class="form-control" placeholder="أضف اسم الشخص" />
        <button type="button" class="btn btn-outline-primary btn-sm" onclick="addInput('related-people-list')">+</button>

      </div>
    </div>
  </div>
</div>

            <!-- Attachments -->
            <div class="mb-3">
                <label class="form-label">المرفقات</label>
                <input type="file" name="Attachments" multiple class="form-control" />
                <small class="text-muted">يمكن رفع عدة ملفات</small>
            </div>

            <button type="submit" class="btn btn-success w-100">إرسال البلاغ</button>
        </form>
    </div>

    <!-- Validation Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script>
        function addInput(containerId) {
            const container = document.getElementById(containerId);
            const div = document.createElement('div');
            div.classList.add('input-group', 'mb-2');

            const input = document.createElement('input');
            input.type = 'text';
            input.name = containerId === 'suspected-people-list' ? 'SuspectedPeopleNames' : 'RelatedPeopleNames';
            input.className = 'form-control';
            input.placeholder = 'اسم الشخص';

            const btn = document.createElement('button');
            btn.type = 'button';
            btn.className = 'btn btn-outline-danger';
            btn.textContent = '×';
            btn.onclick = function () { removeInput(btn); };

            div.appendChild(input);
            div.appendChild(btn);
            container.appendChild(div);
        }

        function removeInput(button) {
            button.parentElement.remove();
        }
    </script>
</body>
</html>
