@model IfsahApp.Models.Disclosure

<h2>@Model.DisclosureNumber - @Model.DisclosureType?.Name</h2>

<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Location:</strong> @Model.Location</p>
<p><strong>Status:</strong> @Model.Status</p>
<p><strong>Submitted At:</strong> @Model.SubmittedAt.ToString("yyyy-MM-dd")</p>

<h4>Notes</h4>
@if (Model.Notes?.Any() == true)
{
    <ul>
        @foreach (var note in Model.Notes)
        {
            <li>
                <strong>@note.Author?.FullName</strong> on @note.CreatedAt.ToString("g")<br />
                @note.Content
            </li>
        }
    </ul>
}
else
{
    <p>No notes available.</p>
}

<h4>Attachments</h4>
@if (Model.Attachments?.Any() == true)
{
    <ul>
        @foreach (var att in Model.Attachments)
        {
            <li>
                <a href="@att.FullPath" target="_blank">@att.FileName</a>
            </li>
        }
    </ul>
}
else
{
    <p>No attachments.</p>
}
