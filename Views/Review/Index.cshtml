@model List<IfsahApp.Models.CaseItem>

@{
    ViewBag.Title = "Review Dashboard";
}

<style>
    body { background-color: #111827; color: #d1d5db; font-family: 'Inter', sans-serif; }
    .dashboard-wrapper { max-width: 1100px; margin: 20px auto; padding: 0; }
    h2 { color: white; font-weight: 600; margin-bottom: 0.5rem; }
    .text-muted { color: #9ca3af !important; margin-bottom: 20px; }
    .header-row { display: flex; background-color: #374151; padding: 15px 25px; border-radius: 10px; font-weight: 700; color: #9ca3af; text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 15px; user-select: none; }
    .header-item, .case-field { flex-basis: 120px; flex-shrink: 0; min-width: 120px; padding-right: 10px; display: flex; align-items: center; }
    .header-item.description, .case-field.description { flex-basis: 300px; min-width: 300px; }
    .header-item.action, .case-field.action { flex-basis: 110px; min-width: 110px; justify-content: center; }
    .cases-container { display: flex; flex-direction: column; gap: 15px; }
    .case-card { background-color: #1f2937; padding: 15px 25px; border-radius: 10px; display: flex; align-items: center; box-shadow: 0 2px 6px rgb(0 0 0 / 0.4); transition: background-color 0.3s ease; }
    .case-card:hover { background-color: #374151; }
    .status-value { color: #3b82f6; }
    .review-button { color: #10b981; border: 2px solid #10b981; padding: 4px 10px; border-radius: 6px; font-size: 0.9rem; font-weight: 500; white-space: nowrap; cursor: pointer; display: inline-flex; align-items: center; justify-content: center; height: auto; flex-shrink: 0; margin-right: 2px; text-decoration: none; }
    .review-button:hover { background-color: #10b981; color: white; }
    @@media (max-width: 700px) {
        .header-row { display: none; }
        .case-card { flex-direction: column; align-items: flex-start; }
        .case-field { flex-basis: auto !important; min-width: 100% !important; margin-bottom: 12px; padding-right: 0; }
        .review-button { width: 100%; height: 44px; margin-top: 8px; }
    }
</style>

<div class="dashboard-wrapper">
    <h2>Review Dashboard</h2>
    <p class="text-muted">Assigned Disclosure Cases</p>

    <!-- Header row -->
    <div class="header-row">
        <div class="header-item">Status</div>
        <div class="header-item">Type</div>
        <div class="header-item">Reference</div>
        <div class="header-item">Date</div>
        <div class="header-item">Location</div>
        <div class="header-item description">Description</div>
        <div class="header-item action">Action</div>
    </div>

    <!-- Case cards -->
    <div class="cases-container">
        @foreach (var caseItem in Model)
        {
            <div class="case-card">
                <div class="case-field">
                    <span class="status-value">@caseItem.Status</span>
                </div>
                <div class="case-field">
                    @caseItem.Type
                </div>
                <div class="case-field">
                    <code>@caseItem.Reference</code>
                </div>
                <div class="case-field">
                    @caseItem.Date.ToString("yyyy-MM-dd")
                </div>
                <div class="case-field">
                    @caseItem.Location
                </div>
                <div class="case-field description">
                    @caseItem.Description
                </div>
                <div class="case-field action">
                    <a href="#" class="review-button">Review Case</a>
                </div>
            </div>
        }
    </div>
</div>
