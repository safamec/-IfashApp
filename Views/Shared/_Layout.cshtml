@using System.Globalization
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName" dir="@(CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - IfashApp</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header class="bg-dark text-white p-3 d-flex justify-content-between align-items-center">
        <a class="navbar-brand text-white" href="/">IfashApp</a>
        <nav>
            <ul class="nav">
                <li class="nav-item"><a class="nav-link text-white" href="/">@Localizer["Home"]</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="/Privacy">@Localizer["Privacy"]</a></li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">@Localizer["Language"]</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="?culture=en">English</a></li>
                        <li><a class="dropdown-item" href="?culture=ar">العربية</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
    </header>

    <main class="container my-5">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white text-center py-3">
        &copy; 2025 - IfashApp - <a href="/Privacy" class="text-white">@Localizer["Privacy"]</a>
    </footer>

    <!-- Bootstrap 5 JS Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
